{
	"manifest_version": 3,
	"name": "FlagEmojis",
	"description": "Replaces Unicode Regional Indicators with images of actual flags. [https://github.com/Brxnni/ChromeFlagEmojis]",
	"version": "0.5",

	"icons": {
		"16": "icons/icon_16.png",
		"32": "icons/icon_32.png",
		"48": "icons/icon_48.png",
		"128": "icons/icon_128.png"
	},

	"web_accessible_resources": [
		{
			"resources": [ "*" ],
			"matches": [ "<all_urls>" ]
		}
	],

	"permissions": [
		"storage"
	],

	"action": {
		"default_popup": "popup/index.html"
	},

	"content_scripts": [{
		"js": [
			"lib.js",
			"content.js"
		],
		"css": ["content.css"],
		"matches": ["<all_urls>"]
	}, {
		"world": "MAIN",
		"js": ["inject.js"],
		"matches": ["<all_urls>"],
		"run_at": "document_start"
	}],
	"background": {
		"service_worker": "background.js"
	}
}
