{
	"manifest_version": 3,
	"name": "FlagEmojis",
	"description": "Replaces Unicode Regional Indicators with images of actual flags.",
	"version": "0.1",
	"icons": {
		"16": "icon_16.png",
		"32": "icon_32.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},

	"permissions": [
		"storage"
	],

	"action": {
		"default_popup": "popup/index.html"
	},

	"content_scripts": [{
		"js": ["content.js"],
		"css": ["content.css"],
		"matches": ["<all_urls>"]
	}],
	"background": {
		"service_worker": "background.js"
	}
}
