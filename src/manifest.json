{
	"manifest_version": 3,
	"name": "FlagEmojis",
	"description": "Replaces Unicode Regional Indicators with images of actual flags.",
	"version": "0.3",
	"icons": {
		"16": "img/icon_16.png",
		"32": "img/icon_32.png",
		"48": "img/icon_48.png",
		"128": "img/icon_128.png"
	},

	"permissions": [
		"storage"
	],

	"action": {
		"default_popup": "popup/index.html"
	},

	"content_scripts": [{
		"js": [
			"lib.js",
			"content.js"
		],
		"css": ["content.css"],
		"matches": ["<all_urls>"]
	}],
	"background": {
		"service_worker": "background.js"
	}
}
